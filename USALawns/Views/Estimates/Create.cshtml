@model USALawns.Models.Estimates

<article class="my-3" id="overview">
    <div class="bd-heading sticky-xl-top align-self-start mt-5 mb-3 mt-xl-0 mb-xl-2">
        <div asp-validation-summary="All" class="text-danger"></div>
        <h3>New Estimates</h3>
    </div>

    <div>
        <div class="bd-example">
            <form method="post" asp-action="Create">
                <div id="emailHelp" class="form-text">We Love Our Customers!</div>
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Customer Details : </label>
                    <select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example" asp-for="Description">
                        <option selected>Is This Person...</option>
                        <option value="1">Prospect</option>
                        <option value="2">Past Customer</option>
                        <option value="3">New Customer</option>
                    </select>
                    <div id="emailHelp" class="form-text">Keep track of customer type for the sales department!</div>

                </div>
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label" asp-for="Customer"></label>
                    <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" asp-for="Customer">

                </div>
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label" asp-for="Amount"></label>
                    <input type="number" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" asp-for="Amount">
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label" asp-for="Date"></label>
                    <input type="date" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" asp-for="Date">
                </div>
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label" asp-for="Description"></label>
                    <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" asp-for="Description">
                </div>
                <button type="submit" class="btn btn-primary" value="Create">Submit</button>
                <button class="btn btn-danger" asp-action="Index">Go Back</button>

            </form>
        </div>
    </div>
</article>

@section Scripts{ 
@{ <partial name="_ValidationScriptsPartial"/> }
}