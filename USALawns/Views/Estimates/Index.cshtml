@model IEnumerable<USALawns.Models.Estimates>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Estimates</h2>
        </div>
        <div class="col-6">
            Create New Estimate
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Estimate ID</th>
                    <th>Estimate Customer</th>
                    <th>Estimate Amount</th>
                    <th>Estimate Job</th>
                    <th>Estimate Quantity</th>
                    <th>Estimate Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var Estimate in Model)
                {
                    <tr>
                        <td width="30%">@Estimate.Id</td>
                        <td width="30%">@Estimate.Customer</td>
                        <td width="30%">@Estimate.Amount</td>
                        <td width="30%">@Estimate.Job</td>
                        <td width="30%">@Estimate.Quantity</td>
                        <td width="30%">@Estimate.Date</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>