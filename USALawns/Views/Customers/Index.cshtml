@model IEnumerable<USALawns.Models.Customers>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Customer List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Customers" asp-action="Create" class="btn btn-primary">Create New Customer</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Customer Name</th>
                    <th>Customer Address</th>
                    <th>Customer Phone</th>
                    <th>Customer Email</th>
                    <!-- <th>Customer Job</th>-->
                </tr>
            </thead>
            <tbody>
                @foreach (var Customer in Model)
                {
                <tr>
                    <td width="30%">@Customer.Name</td>
                    <td width="30%">@Customer.Address</td>
                    <td width="30%">@Customer.Phone</td>
                    <td width="30%">@Customer.Email</td>
                    <!--<td width="30%">Customer.Job</td>-->

                    <td class="col-6 text-right">
                        <a asp-controller="Customers" asp-action="Update" asp-route-Id="@Customer.Id" class="btn btn-primary mx-1">Update </a>
                    </td>
                    <td class="col-6 text-right">
                        <a asp-controller="Customers" asp-action="Delete" asp-route-Id="@Customer.Id" class="btn btn-danger mx-1">Delete </a>

                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
</div>