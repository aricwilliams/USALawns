@model IEnumerable<USALawns.Models.Customers>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Customer List</h2>
        </div>
        <div class="col-6">
            Create New Customer
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Customer ID</th>
                    <th>Customer Name</th>
                    <th>Customer Address</th>
                    <th>Customer Phone</th>
                    <th>Customer Email</th>
                    <th>Customer Job</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var Customer in Model)
                {
                    <tr>
                        <td width="30%">@Customer.Id</td>
                        <td width="30%">@Customer.Name</td>
                        <td width="30%">@Customer.Address</td>
                        <td width="30%">@Customer.Phone</td>
                        <td width="30%">@Customer.Email</td>
                        <td width="30%">@Customer.Job</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>