@model RealtorNC.Models.ViewModels.LoginViewModel

<form id="action" method="post" asp-action="Login" asp-controller="Account">
    <!--<img class="mb-4" src="~/img/Realtor NC.jpg" alt="" width="200" height="200">-->
    <h1 class="h3 mb-3 fw-normal">Please sign in</h1>
    <div asp-validation-summary="All" class="text-danger"></div>


    <div class="form-group row">
        <label class="col-md-2" asp-for="Email"></label>
        <div class=" col-md-10">
            <input asp-for="Email" class="form-control" placeholder="name@example.com" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-2" asp-for="Password"></label>
        <div class=" col-md-10">
            <input asp-for="Password" class="form-control" placeholder="name@example.com" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>

    <div class="checkbox mb-3">
        <label asp-for="RememberMe">
            <input asp-for="RememberMe" type="checkbox" value="remember-me"> Remember me
        </label>
    </div>
    <button asp-fragment="Register" class="w-25 btn btn-lg btn-primary" type="submit">Sign in</button>
    <p class="mt-5 mb-3 text-muted">&copy; 2017–2021</p>
</form>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />

}